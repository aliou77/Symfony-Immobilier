{% extends 'base.html.twig' %}

{% block title %}Agence{% endblock %}

{% block body %}

    <section class="banner-section mb-[4rem]">
        <div class="content bg-[#1c55888f] h-full w-full">
            <div class="flex flex-col justify-center items-center h-full text-white desktop-width">
                <h1 class="sm:text-[5rem] text-[3rem] text-center font-semibold pt-serif leading-[1]">Modern Asset In Town</h1>
                <p class="font-medium pt-serif text-lg text-center mt-4">Find your dream house and live a beautiful life width beloved family </p>
                <a href="{{path('property.index')}}" class="text-lg font-semibold text-white px-[20px] py-[10px] rounded-md bg-main
                 hover:bg-back transition-all duration-300 mt-8">
                    Explore More
                </a>
            </div>
        </div>
    </section>

    <section class="properties-section desktop-width">
        <div class="content mb-4 flex flex-wrap gap-12 justify-center">
            {% for property in properties %}
                {% include '_files/property-grid.html.twig' with {'property':property} %}
            {% endfor %}
        </div>
    </section>

{% endblock %}
