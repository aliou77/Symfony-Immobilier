{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}

<div class="header desktop-width">
    <p class="mt-4">
        <a href="{{ path('home') }}" class="flex items-center gap-2 text-main font-medium text-lg">
            <i class="fa fa-arrow-left"></i>
            <span>Go back</span>
        </a>
    </p>
</div>
<form method="post" class="sm:max-w-[30%] max-w-0 w-full sm:mx-auto h-screen mx-[24px] mt-[3rem]">
    
    
    <div id="content-login" class="content flex flex-col gap-4">
        {% if error %}
            <div class="text-red-700 text-center ">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    
        {# {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('logout') }}">Logout</a>
            </div>
        {% endif %} #}

        <div class="head">
            <div class="logo w-[100px] mx-auto">
                <a href="{{ path('home')}}" class="pt-serif flex flex-col items-center leading-[1]"><span class="text-main text-[40px]">Helter</span> <span class="text-[20px]">Real State</span></a>
            </div>
        </div>
        <h1 class="text-3xl font-medium text-main text-center my-[20px]">Please sign in to access the Back Office</h1>

        <div class="flex flex-col gap-[1.5rem]">
            <input type="username" value="{{ last_username }}" name="_username" class="input-field" autocomplete="email" placeholder="Username" required autofocus>
            <input type="password" name="_password" id="inputPassword" class="input-field" autocomplete="current-password" placeholder="Password" required>
        </div>
    
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
    
        <button class="btn-submit" type="submit">
            Sign in
        </button>
    </div>
</form>
{% endblock %}
